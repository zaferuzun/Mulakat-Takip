@model IEnumerable<Mulakat_Takip.Models.PanelOperations>

@{
    ViewData["Title"] = "Index";
}

<h1>Anasayfa</h1>

<p>
    <a asp-action="Create">Talep Oluştur</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PanelName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PanelSurname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PanelFile)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PanelDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PanelStatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PanelPostDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PanelDefinition)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PanelName)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.PanelSurname)
            </td>
            <td>
                @*@Html.DisplayFor(modelItem => item.PanelFile)*@
                <a asp-action="Download" asp-route-id="@item.Panelid">@item.PanelFile</a>
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.PanelDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PanelStatus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PanelPostDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PanelDefinition)
            </td>
            <td>
                @*<a asp-action="Edit" asp-route-id="@item.Panelid">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Panelid">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Panelid">Delete</a>*@
            </td>
        </tr>
        }
    </tbody>
</table>
@section Scripts {
    <script>

    $(function () {
        $("#DownloadAttachment").click(function () {
            var date1 = document.getElementById("DownloadAttachment").value;

            $.ajax(
            {
                url: '@Url.Action("Download", "UserPanel")',
                contentType: 'application/json; charset=utf-8',
                datatype: 'json',
                data: {
                    studentId: date1
                },
                type: "POST",
                success: function () {
                    window.location = '@Url.Action("Download", "UserPanel", new { id= "Zafer UZUN önyazı.docx" })';
                }
            });

        });
    });
    </script>

}
