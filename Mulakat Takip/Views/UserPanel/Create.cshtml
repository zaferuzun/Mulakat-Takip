@model Mulakat_Takip.Models.PanelOperations

@{
    ViewData["Title"] = "Create";
}

<h1>Talep Oluştur</h1>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-controller="UserPanel" asp-action="Create" method="POST" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="PanelFile" class="control-label"></label>
                    <input asp-for="PanelFile" class="form-control" type="file" required="required" data-error="Lütfen dosya giriniz" />
                    <span asp-validation-for="PanelFile" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PanelName" class="control-label"></label>
                    <input asp-for="PanelName" class="form-control" required="required" data-error="Lütfen ad giriniz"/>
                    <span asp-validation-for="PanelName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PanelSurname" class="control-label"></label>
                    <input asp-for="PanelSurname" class="form-control" required="required" data-error="Lütfen soyadı giriniz" />
                    <span asp-validation-for="PanelSurname" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PanelDate" class="control-label"></label>
                    <input asp-for="PanelDate" class="form-control" required="required" data-error="Lütfen tarih giriniz"/>
                    <span asp-validation-for="PanelDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>


<div>
    <a href="javascript:void(0);" onclick="history.go(-1);">Geri</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
